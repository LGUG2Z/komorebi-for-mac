                  "type": "string",
                  "enum": [
                    "Exe",
                    "Class",
                    "Title",
                    "Path"
                  ]
                },
                "matching_strategy": {
                  "type": "string",
                  "enum": [
                    "Legacy",
                    "Equals",
                    "StartsWith",
                    "EndsWith",
                    "Contains",
